{
  "name": "semux",
  "version": "1.0.1",
  "description": "Semux Javascript Library",
  "main": "dist/index.js",
  "engines": {
    "node": ">=9"
  },
  "scripts": {
    "build": "$(npm bin)/tsr ./index.ts -c tsconfig.json",
    "test": "$(npm bin)/mocha --opts mocha.opts",
    "coverage": "$(npm bin)/nyc $(npm bin)/mocha --opts mocha.opts",
    "format": "$(npm bin)/tslint --project . --fix",
    "format:check": "$(npm bin)/tslint --project .",
    "doc": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/semuxproject/semux.js.git"
  },
  "keywords": [
    "semux"
  ],
  "author": "dev@semux.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/semuxproject/semux.js/issues"
  },
  "homepage": "https://github.com/semuxproject/semux.js#readme",
  "dependencies": {
    "blakejs": "^1.1.0",
    "buffer": "^5.1.0",
    "lodash": "^4.17.5",
    "long": "^4.0.0",
    "ripemd160": "^2.0.1",
    "scl": "^1.0.2",
    "tweetnacl": "^1.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.104",
    "@types/long": "^3.0.32",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "assert": "^1.4.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-typescript": "^0.9.0",
    "mocha": "^5.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-typescript": "^1.1.12",
    "nyc": "^11.5.0",
    "source-map-support": "^0.5.3",
    "ts-node": "^5.0.1",
    "ts-runtime": "^0.1.35",
    "tsconfig-paths": "^3.1.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "node_modules"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "all": true
  }
}
